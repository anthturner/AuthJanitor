<Modal @ref="modalRef">
    <ModalBackdrop />
    <ModalContent IsCentered="true">
        <ModalHeader>
            <ModalTitle>Confirm Delete</ModalTitle>
            <CloseButton Clicked="@HideModal" />
        </ModalHeader>
        <ModalBody Padding="Padding.Is3.OnAll">
            <Heading Size="HeadingSize.Is5">Are you sure you want to delete <span class="font-weight-bold" title="Object ID: @_deletingId">@_deletingName</span>?</Heading>
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="@HideModal">Close</Button>
            <Button Color="Color.Danger" Clicked="@DeleteButtonClicked">Delete</Button>
        </ModalFooter>
    </ModalContent>
</Modal>

@using Blazorise
@code {
    public Modal modalRef;

    private Func<Guid, Task> _onDeleteConfirmedEvent;

    protected async Task DeleteButtonClicked() =>
        await _onDeleteConfirmedEvent(_deletingId)
               .ContinueWith(((t) => HideModal()));

    private string _deletingName = "<Error: No Object Selected!>";
    private Guid _deletingId = Guid.Empty;

    public void ShowModal(Guid id, string name, Func<Guid, Task> onDeleteConfirmedEvent)
    {
        _deletingId = id;
        _deletingName = name;
        _onDeleteConfirmedEvent = onDeleteConfirmedEvent;
        modalRef.Show();
    }
    public void HideModal()
    {
        modalRef.Hide();
        _deletingId = Guid.Empty;
        _deletingName = "<Error: No Object Selected>";
    }
}
